<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Volver" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sub-roles de admin"
            android:textStyle="bold"
            android:layout_marginTop="12dp"/>

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/chkSoloLectura"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SÃ³lo lectura"/>

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/chkAnalista"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Analista"/>

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/chkSoporte"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Soporte"/>

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/chkOperador"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Operador"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnGuardar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Guardar"
            android:textAllCaps="false"/>

    </LinearLayout>
</ScrollView>

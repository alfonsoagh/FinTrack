<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Nombre del lugar -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Nombre del lugar"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/etPlaceName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/bg_rounded_input"
            android:hint="Ej: Starbucks Centro"
            android:inputType="textCapWords"
            android:padding="16dp"
            android:textColor="?attr/colorOnSurface"
            android:textColorHint="?attr/colorOnSurfaceVariant"
            android:textSize="16sp"
            tools:ignore="Autofill" />

        <!-- Foto del lugar -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Foto del lugar (opcional)"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivPlacePhoto"
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/bg_rounded_input"
                android:contentDescription="Foto del lugar"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_add_photo"
                android:visibility="visible" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnTakePhoto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:drawableStart="@drawable/ic_camera"
                    android:drawablePadding="4dp"
                    android:text="Tomar foto"
                    android:textAllCaps="false"
                    android:textColor="@color/primary"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/btnSelectPhoto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:drawableStart="@drawable/ic_gallery"
                    android:drawablePadding="4dp"
                    android:text="Galería"
                    android:textAllCaps="false"
                    android:textColor="@color/primary"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Latitud y Longitud -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="@string/latitud"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/etLatitud"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_rounded_input"
                    android:hint="@string/hint_latitud"
                    android:inputType="numberDecimal|numberSigned"
                    android:padding="16dp"
                    android:textColor="?attr/colorOnSurface"
                    android:textColorHint="?attr/colorOnSurfaceVariant"
                    android:textSize="16sp"
                    tools:ignore="Autofill" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="@string/longitud"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/etLongitud"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_rounded_input"
                    android:hint="@string/hint_longitud"
                    android:inputType="numberDecimal|numberSigned"
                    android:padding="16dp"
                    android:textColor="?attr/colorOnSurface"
                    android:textColorHint="?attr/colorOnSurfaceVariant"
                    android:textSize="16sp"
                    tools:ignore="Autofill" />
            </LinearLayout>
        </LinearLayout>

        <!-- Botones de ubicación -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal"
            android:baselineAligned="false">

            <Button
                android:id="@+id/btnSearchMap"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:minHeight="56dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:backgroundTint="@android:color/transparent"
                android:text="@string/buscar_mapa"
                android:textColor="@color/primary"
                android:textSize="12sp"
                android:textStyle="bold"
                android:paddingVertical="12dp"
                android:paddingHorizontal="8dp"
                android:gravity="center"
                app:cornerRadius="12dp"
                app:rippleColor="@color/primary"
                app:strokeColor="@color/primary"
                app:strokeWidth="2dp" />

            <Button
                android:id="@+id/btnUseLocation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:minHeight="56dp"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:backgroundTint="@android:color/transparent"
                android:text="@string/usar_ubicacion"
                android:textColor="@color/primary"
                android:textSize="12sp"
                android:textStyle="bold"
                android:paddingVertical="12dp"
                android:paddingHorizontal="8dp"
                android:gravity="center"
                app:cornerRadius="12dp"
                app:rippleColor="@color/primary"
                app:strokeColor="@color/primary"
                app:strokeWidth="2dp" />
        </LinearLayout>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
